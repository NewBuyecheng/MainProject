<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zcbigdata.mybits_demo.mapper.StudentMapper">

    <resultMap id="BaseResultMap" type="cn.zcbigdata.mybits_demo.entity.Student">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="account" jdbcType="VARCHAR" property="account" />
        <result column="password" jdbcType="VARCHAR" property="password" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="paperId" jdbcType="INTEGER" property="paperId" />
        <result column="teacherId" jdbcType="INTEGER" property="teacherId" />
        <result column="open" jdbcType="VARCHAR" property="open" />
        <result column="openpass" jdbcType="BIT" property="openpass" />
        <result column="opencomment" jdbcType="VARCHAR" property="opencomment" />
        <result column="mid" jdbcType="VARCHAR" property="mid" />
        <result column="midpass" jdbcType="BIT" property="midpass" />
        <result column="midcomment" jdbcType="VARCHAR" property="midcomment" />
        <result column="last" jdbcType="VARCHAR" property="last" />
        <result column="lastpass" jdbcType="BIT" property="lastpass" />
        <result column="lastcomment" jdbcType="VARCHAR" property="lastcomment" />
        <result column="grade" jdbcType="INTEGER" property="grade" />
    </resultMap>

    <select id="find" resultType="cn.zcbigdata.mybits_demo.entity.Student">
        select * from student where account = #{account}
    </select>

    <insert id="insertStudent" parameterType="cn.zcbigdata.mybits_demo.entity.Student">
        insert into student(account, password, name)
        values (#{account},#{password},#{name})
    </insert>

    <delete id="deleteStudent" parameterType="java.lang.Integer">
        delete from student
        where  id=#{id}
    </delete>

    <update id="updateStudent" parameterType="cn.zcbigdata.mybits_demo.entity.Student">
        update student
        set account = #{account},
            password = #{password},
            name = #{name},
            paperId = #{paperId},
            teacherId = #{teacherId},
            open = #{open},
            openpass = #{openpass},
            opencomment = #{opencomment},
            mid = #{mid},
            midpass = #{midpass},
            midcomment = #{midcomment},
            last = #{last},
            lastpass = #{lastpass},
            lastcomment = #{lastcomment},
            grade = #{grade}
        where id = #{id}
    </update>

    <select id="countStudent" resultType="java.lang.Integer">
        select count(*) from student
    </select>

    <select id="selectStudent" parameterType="java.lang.Integer" resultType="cn.zcbigdata.mybits_demo.entity.Student">
        select * from student limit #{param1},#{param2}
    </select>

    <select id="selectStudentById" parameterType="java.lang.Integer" resultType="cn.zcbigdata.mybits_demo.entity.Student">
        select * from student where id = #{id}
    </select>

    <update id="updateStudentOpen" parameterType="cn.zcbigdata.mybits_demo.entity.Student">
        update student
        set
            open = #{open},
            openpass = #{openpass},
            opencomment = #{opencomment}

        where id = #{id}
    </update>

    <update id="updateStudentMid" parameterType="cn.zcbigdata.mybits_demo.entity.Student">
        update student
        set
            mid = #{mid},
            midpass = #{midpass},
            midcomment = #{midcomment}

        where id = #{id}
    </update>

    <update id="updateStudentLast" parameterType="cn.zcbigdata.mybits_demo.entity.Student">
        update student
        set
            last = #{last},
            lastpass = #{lastpass},
            lastcomment = #{lastcomment}

        where id = #{id}
    </update>

    <update id="choosePaper" parameterType="cn.zcbigdata.mybits_demo.entity.Student">
        update student
        set
            paperId = (select id from paper where subject = #{subject}),
            teacherId = #{teacherId}

        where id = #{id}
    </update>
    



</mapper>