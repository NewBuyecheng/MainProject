<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zcbigdata.mybits_demo.mapper.TeacherMapper">

    <resultMap id="BaseResultMap" type="cn.zcbigdata.mybits_demo.entity.Teacher">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="account" jdbcType="VARCHAR" property="username" />
        <result column="password" jdbcType="VARCHAR" property="password" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="title" jdbcType="VARCHAR" property="title" />
    </resultMap>

    <select id="find" resultType="cn.zcbigdata.mybits_demo.entity.Teacher">
        select * from teacher where account = #{account}
    </select>

    <insert id="insertTeacher" parameterType="cn.zcbigdata.mybits_demo.entity.Teacher">
        insert into teacher(account, password, name,title)
        values (#{account},#{password},#{name},#{title})
    </insert>

    <delete id="deleteTeacher" parameterType="java.lang.Integer">
        delete from teacher
        where  id=#{id}
    </delete>

    <update id="updateTeacher" parameterType="cn.zcbigdata.mybits_demo.entity.Teacher">
        update teacher
        set account = #{account},
            password = #{password},
            name = #{name},
            title = #{title}
        where id = #{id}
    </update>

    <select id="countTeacher" resultType="java.lang.Integer">
        select count(*) from teacher
    </select>

    <select id="selectStudent" parameterType="java.lang.Integer" resultType="cn.zcbigdata.mybits_demo.entity.Teacher">
        select * from teacher limit #{param1},#{param2}
    </select>


</mapper>